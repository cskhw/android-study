<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/activity_main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:text="안드로이드 공부용 앱"
        android:textColor="@color/colorBlack"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <Button
        android:id="@+id/activity_main_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="뷰페이저"
        android:background="@drawable/button_round"
        android:textSize="14sp"
        android:textColor="@color/colorWhite"
        android:layout_margin="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_title" />

    <Button
        android:id="@+id/activity_main_button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="바텀 네비게이션"
        android:background="@drawable/button_round"
        android:textSize="14sp"
        android:textColor="@color/colorWhite"
        android:layout_margin="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_button1" />

    <Button
        android:id="@+id/activity_main_button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="리사이클러"
        android:background="@drawable/button_round"
        android:textSize="14sp"
        android:textColor="@color/colorWhite"
        android:layout_margin="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_button2" />

    <Button
        android:id="@+id/activity_main_button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="뷰페이저"
        android:background="@drawable/button_round"
        android:textSize="14sp"
        android:textColor="@color/colorWhite"
        android:layout_margin="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_button3" />

    <Button
        android:id="@+id/activity_main_button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="뷰페이저"
        android:background="@drawable/button_round"
        android:textSize="14sp"
        android:textColor="@color/colorWhite"
        android:layout_margin="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_button4" />

    <Button
        android:id="@+id/activity_main_button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="뷰페이저"
        android:background="@drawable/button_round"
        android:textSize="14sp"
        android:textColor="@color/colorWhite"
        android:layout_margin="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_button5" />

</androidx.constraintlayout.widget.ConstraintLayout>